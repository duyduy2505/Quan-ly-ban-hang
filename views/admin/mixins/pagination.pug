mixin pagination(pagination)
    nav
        ul(class="pagination")
            if(pagination.currentPage > 1)
                li(class="page-link" button-pagination=pagination.currentPage-1) Trang trước
            - for (var i = 1; i <= pagination.totalPage; i++)
                - const queryString = Object.entries({...query, page: i}).map(([k,v]) => `${k}=${v}`).join('&')
                li(class=`page-item ${pagination.currentPage == i ? 'active' : ''}`)
                    button(class="page-link" button-pagination=i) #{i}
            if(pagination.currentPage < pagination.totalPage)
                li(class="page-link" button-pagination=pagination.currentPage+1) Trang sau
            li(class="page-link" button-pagination=pagination.totalPage) Trang cuối