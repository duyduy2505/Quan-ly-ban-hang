extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug
include ../../mixins/sort.pug
include ../../mixins/table-tree.pug
block main
    h1 Danh mục Nhóm quyền
    +alert-error(2000)
    +alert-success(2000)
    .card.mb-3
        .card-header Danh Sách
        .card-body
            .row
                .col-4
                    a(
                        href=`/admin/roles/create`
                        class="btn btn-outline-success"
                    ) Thêm mới
            table(
                class="table table-hover table-sm"
            )
                thead
                    tr
                        th STT
                        th Nhóm quyền
                        th Mô tả ngắn
                        th Hành động
                tbody
                    if(records.length > 0)
                        each item, index in records
                            tr
                                td  #{index + 1}
                                td  #{item.name}
                                td  !{item.description}
                                td
                                    a(
                                        href=`${prefixAdmin}/roles/edit/${item._id}`
                                        class="btn btn-outline-primary btn-sm"
                                    ) Sửa
                                    a(
                                        href=`${prefixAdmin}/roles/delete/${item._id}`
                                        class="btn btn-outline-danger btn-sm"
                                        onclick="return confirm('Bạn có chắc chắn muốn xóa nhóm quyền này?')"
                                    ) Xóa
                    else
                        tr
                            td(colspan="4" class="text-center") Chưa có dữ liệu nào được tìm thấy. Vui lòng thêm mới nhóm quyền.

            
        
