extends ../../layouts/default.pug 

block main
    h1(class="mb-4") Thông tin cá nhân
    if(user.avatar)
        img(src=user.avatar width= "150px" class="mb-3")
    if(user.fullname)
        h1(class="mb-4") Họ tên : <b> #{user.fullname}</b>
    if(user.email)
        h1(class="mb-4") Email: <b> #{user.email}</b>
    if(user.phone)
        h1(class="mb-4") SDT: <b> #{user.phone}</b>
    if(user.status)
        div(class="mb-4")
            span Trạng thái: 
            if(user.status === 'active')
                span(class="badge bg-success ms-2 fs-4") Hoạt động
            else
                span(class="badge bg-secondary ms-2 fs-4") Ngừng hoạt động
    if(role.title)
        h1(class="mb-4") Phân quyền: <b> #{role.title}</b>


    a(href=`${prefixAdmin}/my-accounts/edit` class="btn btn-warning btn-sm mt-3") Sửa Tài khoản

    script(src="admin/js/products.js")
