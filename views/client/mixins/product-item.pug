mixin product-item(product)
    .col-4.md-3
        .product-item
            .inner-image
                img(src=product.thumbnail, alt=product.title)
                if(product.featured == "1")
                    .inner-featured Nổi bật
            .inner-content
                h3.inner-title
                    a(href="/products/" + product.slug) #{product.title}
                .inner-price-new #{product.priceNew} $
                .inner-price-old #{product.price} $
                .inner-discount -#{product.discountPercentage} %